footer.container-fluid.mt-1
  
  div.card
    div.card-body.d-flex.align-items-center.px-0.pl-3.py-0
      p.my-0
        | Using
        |
        strong#sampleCount 0
        |
        | samples taken
        |
        strong#sampleMethod randomly
        |
        | from
        |
        strong#totalCount 87,707,630
        |
        | tweets
      button(type="button" class="btn btn-sm btn-outline-secondary ml-auto" data-toggle="modal" data-target="#exampleModal")
        img(src="icons/bootstrap-icons-1.0.0-alpha5/share-fill.svg")
  
  div(class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
    div(class="modal-dialog" role="document")
      div(class="modal-content")
        div(class="modal-header")
          h5(class="modal-title" id="exampleModalLabel") Share
          button(type="button" class="close" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times;
        div(class="modal-body")
          div.input-group.input-group-sm.mb-2
            div.input-group-prepend
              span.input-group-text
                img(src="icons/bootstrap-icons-1.0.0-alpha5/code.svg")
            textarea#shareembed.form-control(rows="3" readonly size="30")
            div.input-group-append
              button(class="btn clippable btn-outline-secondary" data-clipboard-target="#shareembed") Copy
          div.input-group.input-group-sm
            div.input-group-prepend
              span.input-group-text
                img(src="icons/bootstrap-icons-1.0.0-alpha5/link-45deg.svg")
            input#sharelink.form-control(type="text" readonly value="https://data.r-shief.org/dashboard" size="30")
            div.input-group-append
              button(class="btn clippable btn-outline-secondary" data-clipboard-target="#sharelink") Copy
          //- button(type="button" class="btn btn-primary") Save changes
          //- button(type="button" class="btn btn-secondary" data-dismiss="modal") Close

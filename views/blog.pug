extends layout

block content
  #content
    h1 Blogs
    for post in posts
      div(class="card")
        div(class="card-body")
          a(href="/blog/" + post.slice(0,-3))
            !=post.slice(0,-3)

    form#blogSubmit()
      div(class="form-group")
        label(for="exampleFormControlFile1") Submit New Blog. Accepts markdwon (.md) files.
        input(type="file" class="form-control-file" id="blogSubmitFile")
        button(type="submit" class="btn btn-primary") Submit

prepend scripts
  script(src="/javascripts/blogSubmit.js")

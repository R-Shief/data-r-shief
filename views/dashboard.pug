doctype html
html
  head
    // Necessary metadata for Bootstrap
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    block stylesheets
      link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css", integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk", crossorigin="anonymous")
      link(href="/stylesheets/dashboard.css", rel="stylesheet")
  body
    block content
      #filterBar.navbar.navbar-light.bg-light
        hgroup.navbar-brand
          p.mb-0 Tweet Databoard 
          small Over 45 million tweets
        form.form-inline
          div.form-group.mr-sm-2
            label.mr-1(for="keywordsTextArea") Keywords 
            input#keywordsText.form-control(type="text" size="12")
          div.form-group.mr-sm-2
            label.mr-1(for="keywordsTextArea") Start Date 
            input#startText.form-control(type="text" size="5")
          div.form-group.mr-sm-2
            label.mr-1(for="keywordsTextArea") End Date 
            input#endText.form-control(type="text" size="5")
          div.dropdown.mr-sm-2
            button.btn.btn-outline-secondary.dropdown-toggle(type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Languages
            div.dropdown-menu(aria-labelledby="dropdownMenuButton")
              div.form-check.dropdown-item
                input.form-check-input(type="checkbox" id="inlineCheckbox2" value="option2")
                label.form-check-label(for="inlineCheckbox2") 2
              div.form-check.dropdown-item
                input.form-check-input(type="checkbox" id="inlineCheckbox3" value="option3")
                label.form-check-label(for="inlineCheckbox3") 3
              div.form-check.dropdown-item
                input.form-check-input(type="checkbox" id="inlineCheckbox4" value="option4")
                label.form-check-label(for="inlineCheckbox4") 4
      #dash.container.d-flex.justify-content-center
        div.card
          div.card-img-top
            #userPacking.viz
          div.card-body
            h5.card-title User Packing
        div.card
          div.card-img-top
            #streamgraph.viz
          div.card-body
            h5.card-title Streamgraph
    block scripts
    script(src='/javascripts/dashboard.bundle.js')
    script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js", integrity="sha384-1CmrxMRARb6aLqgBO7yyAxTOQE2AKb9GfXnEo760AUcUmFx3ibVJJAzGytlQcNXd", crossorigin="anonymous")
